<%- include('./include/head.ejs') %>
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/popup.css">
    <link href='https://fonts.googleapis.com/css?family=Kameron' rel='stylesheet'>
    <title>Kiadások</title>
    <style>
      body{
        font-family: 'Kameron';
         font-size: 22px;
      }
    </style>
</head>
<%- include('./include/navigation.ejs' ) %>
<body>
  <div class="headline">
    <h1>
      Üdvözlünk az oldalon, <%= username %>.
    </h1>
  </div>
  <main>
    <div class="transactions">
      <h2>Tranzakciók</h2>
        <div class="transaction-list">
          <% expenses.forEach(expense => {%>
            <div class="row">
              <span><%= expense.description %>: </span> <span><%= expense.amount %>Ft</span>
            </div>
          <%});%>
        </div>
    </div>

    <div class="spending-circle">
      <svg class="loading-circle" viewBox="0 0 100 100">
        <!-- Background Circle -->
        <circle class="background-circle" cx="50" cy="50" r="45"></circle>
        <!-- Progress Circle -->
        <circle class="progress-circle" cx="50" cy="50" r="45"></circle>
        <text x="50" y="50" text-anchor="middle" alignment-baseline="middle" class="loading-text"><%= spending%> Ft</text>
      </svg>
    </div>

    <div class="balance">
      <h3>Egyenleged</h3>
      <div class="balance-box">
        <span id="balanceAmount"><%= budget%> Ft</span>
        <button id="add-money" onclick="addTransaction('set-budget-menu')">
            <img src="/img/edit.svg" alt="edit button">
        </button>
      </div>
      <br>
      <h3>Tranzakció hozzáadása</h3>
      <button class="add-transaction" onclick="changeMenuState('add-expense-menu')">Add hozzá</button>
    </div>
  </main>
</div>

<!-- Add Kiadas -->

<div class="popup" id="add-expense-menu" style="display: none;">
  <form action="/newExpense" action="POST" id="add-expense-form">
    <label for="description">Leírás</label>
    <input type="text" name="description">
    <label for="amount">Ár</label>
    <input type="number" name="amount">
    <label for="category">Kategória</label>
    <input type="text" name="category">
    <button type="submit">Hozzáadása</button>
  </form>
  <button onclick="changeMenuState('add-expense-menu')">X</button>
</div>

<!-- Set Balance -->

<div class="popup" id="set-budget-menu" style="display: none;">
  <form action="/setBalance" action="POST" id="add-expense-form">
    <label for="balance">Egyenleged</label>
    <input type="number" name="balance">
    <button type="submit">Beállítás</button>
  </form>
  <button onclick="changeMenuState('set-budget-menu')">X</button>
</div>

<script src="/js/main.js"></script>
<script src="/js/circle.js"></script>
<script>
    var i = <%= JSON.stringify(spending/budget) %>;
    setProgress(i);
</script>
</body>
</html>